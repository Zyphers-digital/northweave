{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },

        /* Tillatelser – låser ned kamera/mikrofon/geo som du hadde */
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },

        /* CSP – litt mer pragmatisk for Vite build + vanlige fonter */
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self'; connect-src 'self' https:;"
        }
      ]
    },

    /* Lang caching for hashed assets (Vite) */
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  /* Viktig for React Router: alltid server index.html for alle ruter */
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
